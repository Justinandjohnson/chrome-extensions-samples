{
  "manifest_version": 3,
  "name": "Text-to-Speech Extension",
  "version": "1.0",
  "permissions": ["activeTab","offscreen", "scripting", "storage"],
  "host_permissions": ["https://api.elevenlabs.io/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "jquery.min.js"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src https://api.elevenlabs.io/;"
  },
  "action": {
    "default_popup": "hello.html"
  },
  "commands": {
    "toggle-voice": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Toggle the voice feature"
    }
  }
}
